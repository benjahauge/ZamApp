@page
@model ZamApp.Pages.Courses.CreateModel
@using Microsoft.AspNet.Identity
@{
	var id = User.Identity.GetUserId();
	Model.Course.UserId = id;
}

<form method="post" >
	<h3>Insert Values</h3>
	<div asp-validation-summary="  ModelOnly  " class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Course.ZealandLocation"></label><input asp-for="@Model.Course.ZealandLocation" class="form-control" placeholder="Zealand Location" />
		<span asp-validation-for="Course.ZealandLocation" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Course.StartPoint"></label><input asp-for="@Model.Course.StartPoint" class="form-control" placeholder="StartPoint" />
		<span asp-validation-for="Course.StartPoint" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Course.EndPoint"></label><input asp-for="@Model.Course.EndPoint" class="form-control" placeholder="EndPoint" />
		<span asp-validation-for="Course.EndPoint" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Course.PickUpPoint1"></label><input asp-for="@Model.Course.PickUpPoint1" class="form-control" placeholder="PickUpPoint1" />
		<span asp-validation-for="Course.PickUpPoint1" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label>Pick up point 2:</label><input asp-for="@Model.Course.PickUpPoint2" class="form-control" placeholder="PickUpPoint2" />
		<span asp-validation-for="Course.PickUpPoint2" class="text-danger"></span>
	</div>

    <div class="form-group">
        <label>Pick up point 3:</label><input asp-for="@Model.Course.PickUpPoint3" class="form-control" placeholder="PickUpPoint3" />
        <span asp-validation-for="Course.PickUpPoint3" class="text-danger"></span>
    </div>
	
	
    <div class="form-group">
        <label asp-for="Course.StartDateTime"></label><input asp-for="@Model.Course.StartDateTime" class="form-control" />
        <span asp-validation-for="@Model.Course.StartDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.EndDateTime"></label><input asp-for="@Model.Course.EndDateTime" class="form-control" />
        <span asp-validation-for="@Model.Course.EndDateTime" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Course.UserId"></label><input asp-for="@Model.Course.UserId" class="form-control" />
        <span asp-validation-for="@Model.Course.UserId" class="text-danger"></span>
    </div>
	


    <div class="text-center">
		<input class="btn btn-primary" type="submit" value="Create Course" />
	</div>
</form>
